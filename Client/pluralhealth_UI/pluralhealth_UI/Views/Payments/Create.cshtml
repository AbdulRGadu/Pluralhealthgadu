@model pluralhealth_UI.Models.ViewModels.CreatePaymentViewModel
@{
    ViewData["Title"] = "Pay Invoice";
}

<div class="container mt-4">
    <h2>Pay Invoice</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </div>
    }

    <div class="card mb-3">
        <div class="card-body">
            <h5>Invoice Summary</h5>
            <p><strong>Invoice Number:</strong> @Model.InvoiceNumber</p>
            <p><strong>Patient:</strong> @Model.PatientName</p>
            <p><strong>Wallet Balance:</strong> @Model.Currency @Model.WalletBalance.ToString("N2")</p>
            <p><strong>Invoice Total:</strong> @Model.Currency @Model.InvoiceTotal.ToString("N2")</p>
            <p><strong>Total Paid:</strong> @Model.Currency @Model.TotalPaid.ToString("N2")</p>
            <p><strong>Remaining Balance:</strong> <span class="text-danger">@Model.Currency @Model.RemainingBalance.ToString("N2")</span></p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form method="post" asp-action="Create">
                <input type="hidden" asp-for="InvoiceId" />
                <input type="hidden" asp-for="InvoiceNumber" />
                <input type="hidden" asp-for="PatientName" />
                <input type="hidden" asp-for="InvoiceTotal" />
                <input type="hidden" asp-for="TotalPaid" />
                <input type="hidden" asp-for="RemainingBalance" />
                <input type="hidden" asp-for="Currency" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="amount" class="form-label">Payment Amount</label>
                        <input type="number" class="form-control" asp-for="Amount" min="0.01" step="0.01" max="@Model.RemainingBalance" required />
                        <small class="form-text text-muted">Maximum: @Model.Currency @Model.RemainingBalance.ToString("N2")</small>
                    </div>
                    <div class="col-md-6">
                        <label for="paymentMethod" class="form-label">Payment Method</label>
                        <select class="form-select" asp-for="PaymentMethod" required>
                            <option value="Cash" selected="@(Model.PaymentMethod == "Cash")">Cash</option>
                            <option value="Card" selected="@(Model.PaymentMethod == "Card")">Card</option>
                            <option value="Wallet" selected="@(Model.PaymentMethod == "Wallet")">Wallet</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary" id="submitBtn">Process Payment</button>
                        <a href="@Url.Action("Index", "Records")" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const walletBalance = @Model.WalletBalance;
        const remainingBalance = @Model.RemainingBalance;
        const amountInput = document.getElementById('Amount');
        const paymentMethodSelect = document.getElementById('PaymentMethod');
        const submitBtn = document.getElementById('submitBtn');

        function validatePaymentAmount() {
            const amount = parseFloat(amountInput.value) || 0;
            const paymentMethod = paymentMethodSelect.value;

            // Check if amount exceeds remaining balance
            if (amount > remainingBalance) {
                amountInput.value = remainingBalance.toFixed(2);
                return;
            }

            // Check wallet balance if paying via wallet
            if (paymentMethod === 'Wallet') {
                if (amount > walletBalance) {
                    alert(`Insufficient wallet funds. Wallet balance: @Model.Currency ${walletBalance.toFixed(2)}, Payment amount: @Model.Currency ${amount.toFixed(2)}`);
                    amountInput.value = Math.min(walletBalance, remainingBalance).toFixed(2);
                    return false;
                }
            }
            return true;
        }

        // Validate on amount change
        amountInput.addEventListener('input', function() {
            validatePaymentAmount();
        });

        // Validate on payment method change
        paymentMethodSelect.addEventListener('change', function() {
            validatePaymentAmount();
        });

        // Prevent duplicate form submissions (idempotency) and validate before submit
        document.querySelector('form').addEventListener('submit', function(e) {
            if (submitBtn.disabled) {
                e.preventDefault();
                return false;
            }

            // Final validation before submit
            if (!validatePaymentAmount()) {
                e.preventDefault();
                return false;
            }

            submitBtn.disabled = true;
            submitBtn.textContent = 'Processing...';
        });

        // Initialize max amount display
        const paymentMethod = paymentMethodSelect.value;
        const maxAmount = paymentMethod === 'Wallet' ? Math.min(walletBalance, remainingBalance) : remainingBalance;
        document.querySelector('.form-text.text-muted').textContent = 
            `Maximum: @Model.Currency ${maxAmount.toFixed(2)}${paymentMethod === 'Wallet' ? ' (Wallet balance)' : ''}`;
        
        // Update max amount display when payment method changes
        paymentMethodSelect.addEventListener('change', function() {
            const method = this.value;
            const max = method === 'Wallet' ? Math.min(walletBalance, remainingBalance) : remainingBalance;
            document.querySelector('.form-text.text-muted').textContent = 
                `Maximum: @Model.Currency ${max.toFixed(2)}${method === 'Wallet' ? ' (Wallet balance)' : ''}`;
        });
    </script>
}

